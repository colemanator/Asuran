<section class="multisection-section section-agency-details col-sm-6 {{ section.size }} {{ section.colors }}">
	<div class="l-table section-agency-details-table">
		<div class="l-table-row">
			<div class="l-table-cell">
				<div class="section-agency-details-container">
					{% if section['agencies'] %}

						{% set agency = section['agencies'][0] %}
						{#<div class='divider brand-colors'>&nbsp;</div>#}
						{% if  agency['title'] %}<h4 class='agency-heading'>{{ agency['title']|raw }}</h4>{% endif %}
						{% if  agency['meta']['phone'] %}<h6 class='agency-sub-heading'>Call</h6>
						<h5 class="agency-details-text">{{ agency['meta']['phone']|raw }}</h5>{% endif %}
						{% if  agency['meta']['fax'] %}<h6 class='agency-sub-heading'>Fax</h6>
						<h5 class="agency-details-text">{{ agency['meta']['fax']|raw }}</h5>{% endif %}
						{% if  agency['meta']['emailAddress'] %}<h6 class='agency-sub-heading'>Email</h6>
						<h5 class="agency-details-text"><a href='mailto:{{ agency['meta']['emailAddress']|raw }}'>{{ agency['meta']['emailAddress']|raw }}</a></h5>{% endif %}

					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>

<section class="multisection-section section-button-link col-sm-6 {{ section.size }}" style="background-image: url('{{ section.bgImageUrl }}');">
	<div class="multisection-section-overlay" style="background-color: rgba(0,0,0,{{ section.transparency ? section.transparency : '0.6' }}) !important;">
		<div class="l-table">
			<div class="l-table-row">
				<div class="l-table-cell">
					<div class="section-button-link-container">
						{% if section.caption %}
							<p class="section-button-link-caption">{{ section.caption|raw|nl2br }}</p>
						{% endif %}
						<a href="{{ section.href }}" target="{{ section.target is not null ?  section.target : '_self' }}" class="btn brand-colors brand-colors-hover">{{ section.buttonText }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
